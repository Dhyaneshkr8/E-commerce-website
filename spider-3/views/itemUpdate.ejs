<%- include('partials/headerout') %>

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">UPDATE ITEM</h1><br>
    <h3 class="jumbotron-heading">itemName</h3><br><br>
    <p class="lead text-muted mb-0">Enter the values of the item even if they are not to be changed</p>
  </div>
</section>


<br>

<div class="row">
  <div class="col-lg">
    <div class="card">
      <div class="card-body">
        <form action=<%= itemUpdatelink %> method="POST">

          <div class="form-group row">
            <label for="Item name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <p class=""><%= updateItem.itemName %></p>
              <input type="text" class="form-control" name="itemName" placeholder="Item Name"><br>
              <!-- <button type="button" class="btn btn-sm btn-warning right" name="button">CHANGE</button> -->
            </div>
          </div><br>

          <div class="form-group row">
            <label for="Category" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
              <p class=""><%= updateItem.itemCategory %></p>
              <input type="text" class="form-control" name="itemCategory" placeholder="Category"><br>
              <!-- <button type="button" class="btn btn-sm btn-warning right" name="button">CHANGE</button> -->
            </div>
          </div><br>

          <div class="form-group row">
            <label for="description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
              <p class=""><%= updateItem.description %></p>
              <textarea class="form-control" name="itemDescription" id="exampleFormControlTextarea1" rows="3"></textarea><br>
              <!-- <button type="button" class="btn btn-sm btn-warning right" name="button">CHANGE</button> -->
            </div>
          </div><br>

          <div class="form-group row">
            <label for="item Price" class="col-sm-2 col-form-label">Item Price</label>
            <div class="col-sm-10">
              <p class=""><%= updateItem.price %></p>
              <input type="number" class="form-control" name="itemPrice" placeholder="Price">
              <!-- <button type="button" class="btn btn-sm btn-warning right" name="button">CHANGE</button><br> -->
            </div>
          </div><br>

          <div class="form-group row">
            <label for="Category" class="col-sm-2 col-form-label">Item Quantity</label>
            <div class="col-sm-10">
              <p class=""><%= updateItem.quantity %> </p>
              <input type="number" class="form-control" name="itemQuantity" placeholder="Quantity"><br>
              <!-- <button type="button" class="btn btn-sm btn-warning right" name="button">CHANGE</button> -->
            </div>
          </div><br>

          <!-- <div class="form-group ">
            <div class=" row ">
              <label class="col-sm-2 col-form-label">Change Item Image</label><br>
              <input type="file" class="padding btn btn-sm btn-outline-light" id="img" name="itemImg" accept="image/*">
            </div>
          </div> -->
          <!-- <br> -->

          <div class="form-group row text-center">
            <div class="col-sm-10 ">
              <button type="submit" class="btn btn-lg btn-primary ">UPDATE ITEM</button>
            </div>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>










<%- include('partials/footerin') %>
