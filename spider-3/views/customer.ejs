<%- include('partials/headerout') %>

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">CUSTOMER DETAILS</h1><br>
    <!-- <h3 class="jumbotron-heading">Dhyanesh</h3><br><br> -->
    <p class="lead text-muted mb-0">PRODUCTS ADDED BY YOU</p>
  </div>
</section>

<br>



<div class="container">
  <div class="row">
    <div class="col">
      <div class="row">

        <% customers.forEach(function(customer){  %>

        <div class="col-12 col-md-6 col-lg-4">
          <div class="card">
            <!-- <img class="card-img-top" src="https://dummyimage.com/600x400/55595c/fff" alt="Card image cap"> -->
            <div class="card-body">
              <h4 class="card-title text-center" style="color: blue"><%= customer.name %></h4>
              <p class="card-text text-center"><a href="mailto:" + <%= customer.username %> ><%= customer.username %></a></p>
              <div class="row">
                <div class="col">
                  <p class="btn btn-danger btn-block">ITEMS PURCHASED</p>
                  <ul class="list-group">
                    <% customer.history.forEach(function(item){ %>
                    <li class="list-group-item"><% item.itemName %></li>
                    <% }) %>
                  </ul>
                  <!-- <a href="/itemUpdate"><button value="" class="btn btn-link btn-block">UPDATE</<button></a> -->
                </div>
                <!-- <div class="col">
                  <a href="#" class="btn btn-success btn-block">Add to cart</a>
                </div> -->
              </div>
            </div>
          </div>
        </div>

        <% }) %>

      </div>
    </div>
  </div>
</div>


<%- include('partials/footerin') %>
